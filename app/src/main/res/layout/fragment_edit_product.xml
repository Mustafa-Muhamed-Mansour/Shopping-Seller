<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.EditProductFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_edit_product"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_product"
            />


        <EditText
            android:id="@+id/edit_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            />

        <EditText
            android:id="@+id/edit_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            />

        <EditText
            android:id="@+id/edit_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            >

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textAllCaps="false"
                android:textSize="@dimen/_19ssp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_5sdp"
                />

            <Spinner
                android:id="@+id/choose_edit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/choose_edit_status"
                android:layout_margin="@dimen/_5sdp"
                />

            <Spinner
                android:id="@+id/choose_edit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_5sdp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/edit_txt_number_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    />

                <NumberPicker
                    android:id="@+id/edit_number_picker_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>